#include <stdio.h>
#include<string.h>
int main()
{
    int arr1[26]={0},arr2[26]={0},g=0;
    char *str1,*str2;
    printf("enter the string1");
    scanf("%s",str1);
    printf("enter the string2");
    scanf("%s",str2);
    int n=strlen(str1);
    printf("%d\n",n);
    if(strlen(str1)!=strlen(str2))
    {
        printf("not anagram");
        return 0;
    }
    printf("till1");
    for(int i=0;i<strlen(str1);i++)
    {
        arr1[str1[i]-'a']++;
    }
    printf("till2");
    for(int i=0;i<strlen(str2);i++)
    {
        arr1[str2[i]-'a']++;
    }
    printf("till3");
    for(int i=0;i<26;i++)
    {
        if(arr1[i]=arr2[i])
        {
            g=0;
        }
        else
        {
            g=1;
            break;
        }
    }
    printf("till4");
    if(g==1)
    printf("anagram");
    else
    printf("no anagram");
}
